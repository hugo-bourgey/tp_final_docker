{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<style>
    .card {
        margin: 10px;
        padding: 10px;
        border: 1px solid #000;
        background-color: #f0f0f0;
    }
    h2 {
        margin: 0;
    }
    p {
        margin: 0;
    }
</style>
<div>
    {% for article in articles %}
    <div class="card">
        <h2>{{ article.title }}</h2>
        <p>{{ article.content }}</p>
    </div>
    {% endfor %}
</div>
{% endblock %}
